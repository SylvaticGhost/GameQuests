{
    "semi": true,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "overrides": [
        {
            "files": ["*.mjs", "*.json", "*.yml", "*.yaml", "*.css", "*.scss"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "proseWrap": "preserve"
            }
        }
    ]
}
